[color]
	ui = auto
[apply]
	ignoreWhitespace = false
	whitespace = warn
[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
	quotepath = false
#	autocrlf = true
	safecrlf = true
	whitespace = blank-at-eol,space-before-tab,tab-in-indent,blank-at-eof
[diff]
	renames	= copies
[instaweb]
	local = true
	httpd = webrick
[log]
	follow = true
[merge]
	ff = false
	renames = copies
#	renormalize = true
[pull]
	ff = only
[push]
	recurseSubmodules = check
[rebase]
	stat = true
[status]
	renames = copies
	submoduleSummary = true
[stash]
	showPatch = true
[svn]
	findcopiesharder = true
	pushmergeinfo = true
	edit = false
	followparent = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[include]
	path = ~/.gitconfig.machine
	path = ~/.gitconfig.user
[submodule]
	recurse = true
