import os ;
import path ;

constant HOME : [ os.environ HOME ] ;
if [ os.name ] = MACOSX
{
  constant HOMEBREW_PREFIX : [ SHELL "brew --prefix" : strip-eol ] ;
}

# Host Compilers

# Use the toolset if command exists.
rule using-if-command-exists ( toolset : version : command : options * )
{
  if ! [ path.exists $(command) ]
  {
    return ;
  }

  using $(toolset) : $(version) : $(command) : $(options) ;
}

if [ os.name ] = NT
{
  using msvc ;

  using msvc : 14.3 ;
  using msvc : 14.2 ;
  using msvc : 14.1 ;
  using msvc : 14.0 ;
}
else if [ os.name ] = LINUX
{
  using gcc ;
  using clang ;

  using-if-command-exists gcc : 11 : /usr/bin/g++-11 ;
  using-if-command-exists gcc : 10 : /usr/bin/g++-10 ;
  using-if-command-exists gcc :  9 : /usr/bin/g++-9 ;
  using-if-command-exists gcc :  8 : /usr/bin/g++-8 ;
  using-if-command-exists gcc :  7 : /usr/bin/g++-7 ;

  using-if-command-exists clang : 21 : /usr/bin/clang++-21 ;
  using-if-command-exists clang : 20 : /usr/bin/clang++-20 ;
  using-if-command-exists clang : 19 : /usr/bin/clang++-19 ;
  using-if-command-exists clang : 18 : /usr/bin/clang++-18 ;
  using-if-command-exists clang : 17 : /usr/bin/clang++-17 ;
  using-if-command-exists clang : 16 : /usr/bin/clang++-16 ;
  using-if-command-exists clang : 15 : /usr/bin/clang++-15 ;
  using-if-command-exists clang : 14 : /usr/bin/clang++-14 ;
  using-if-command-exists clang : 13 : /usr/bin/clang++-13 ;
  using-if-command-exists clang : 12 : /usr/bin/clang++-12 ;
