  using-if-command-exists gcc :  8arm : $(HOMEBREW_PREFIX)/opt/arm-gcc-bin@8/bin/arm-none-eabi-g++ ;

  using-if-command-exists gcc : 14avr : $(HOMEBREW_PREFIX)/opt/avr-gcc@14/bin/avr-g++ ;
