  using-if-command-exists gcc : 15arm : arm-none-eabi-g++ ;

  using-if-command-exists gcc : 15arm : $(HOMEBREW_PREFIX)/opt/arm-gcc-bin@15/bin/arm-none-eabi-g++ ;
