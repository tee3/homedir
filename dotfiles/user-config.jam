  using-if-command-exists clang : 10 : $(HOMEBREW_PREFIX)/opt/llvm@10/bin/clang++ : $(macos-options) ;
  using-if-command-exists clang :  9 : $(HOMEBREW_PREFIX)/opt/llvm@9/bin/clang++  : $(macos-options) ;
