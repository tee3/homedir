#!/bin/sh
#
# Install interesting packages for Fedora.
#
# This assumes that the current user is the user used to install
# packages and has the proper administrator privileges.

set -e
set -u

release=$(cat /etc/fedora-release)
version=0
if [ "${release}" = "Fedora release 22 (Twenty Two)" ]; then
    version=22
elif [ "${release}" = "Fedora release 23 (Twenty Three)" ]; then
    version=23
elif [ "${release}" = "Fedora release 24 (Twenty Four)" ]; then
    version=24
elif [ "${release}" = "Fedora release 25 (Twenty Four)" ]; then
    version=25
elif [ "${release}" = "Fedora release 26 (Twenty Four)" ]; then
    version=26
fi

# package manager
pm=
pm_check=
pm_update=
pm_upgrade=
pm_install=
pm_cleanup=

# check if dnf is installed
if [ -z "$(which dnf 2> /dev/null)" ]; then
    echo "warning: dnf not found."
else
    pm="dnf"
    pm_check="true"
    pm_update="sudo ${pm} update"
    pm_upgrade="true"
    pm_install="sudo ${pm} -q -y install"
    pm_cleanup="sudo ${pm} autoremove"

    sudo ${pm} install dnf-plugins-core
    sudo ${pm} config-manager --add-repo https://download.docker.com/linux/fedora/docker-ce.repo
fi

# check if yum is installed, if package manager is not
if [ -z "${pm}" ]; then
    if [ -z "$(which yum 2> /dev/null)" ]; then
        echo "warning: yum not found."
    else
        pm="yum"
        pm_check="true"
        pm_update="sudo ${pm} update"
        pm_upgrade="true"
        pm_install="sudo ${pm} -q -y install"
        pm_cleanup="sudo ${pm} autoremove && ${pm} clean all"
    fi
fi

# check if package manager is installed
if [ -z "${pm}" ]; then
    echo "error: Package manager not found."
    exit 1
fi

# additional repositories
${pm_install} curl

curl -s https://packagecloud.io/install/repositories/github/git-lfs/script.rpm.sh | sudo bash

# update and check packages
${pm_update}
if ! ${pm_check} ; then
    echo "warning: Package manager check failed, continue anyway (y/n)?: \c"
    read -r yn
    if [ "${yn}" != "y" ]; then
	exit 1
    fi
fi
${pm_update}

# upgrade existing packages
${pm_upgrade}

# install packages for homedir installer
${pm_install} wget
${pm_install} stow
${pm_install} diffutils

# install interpreters prior to other packages
${pm_install} python
${pm_install} python-devel
${pm_install} python3
${pm_install} python3-devel
${pm_install} ruby
${pm_install} ruby-devel

# install version control systems
${pm_install} git
${pm_install} subversion

# install basic tools
${pm_install} autoconf
${pm_install} tar
${pm_install} bzip2
${pm_install} patch

# install fuse
#${pm_install} gitfs
${pm_install} sshfs

# install all taps with the right options
${pm_install} arp-scan
#${pm_install} arp-sk
#${pm_install} arpoison
${pm_install} avahi
${pm_install} avahi-tools
#${pm_install} avrdude
${pm_install} avr-binutils
${pm_install} avr-gcc
${pm_install} bash-completion
#${pm_install} bear
${pm_install} boost
#${pm_install} boost-bcp
${pm_install} boost-build
${pm_install} boost-devel
#${pm_install} casperjs
${pm_install} cflow
${pm_install} clang
${pm_install} clang-devel
${pm_install} clang-libs
#${pm_install} clblas
#${pm_install} clfft
#${pm_install} clinfo
${pm_install} cmake
${pm_install} cppcheck
${pm_install} dfu-util
#${pm_install} dns2tcp
