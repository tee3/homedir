#!/bin/sh
#
# Install Go modules.

set -u

go=$(which go 2> /dev/null)
if [ -z "${go}" ] || [ ! -x "${go}" ]; then
    echo "error: Go not installed, not installing Go packages."
    exit 1
fi

# Development

GOPATH="${HOME}"/opt/local/src/go "${go}" get -u github.com/rogpeppe/godef
GOPATH="${HOME}"/opt/local/src/go "${go}" get -u github.com/nsf/gocode

# Utilities

GOPATH="${HOME}"/opt/local/src/go "${go}" get github.com/joewalnes/websocketd
