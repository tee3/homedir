#!/bin/sh
#
# Install Go packages.

set -u

go=$(which go 2> /dev/null)
if [ -z "${go}" ] || [ ! -x "${go}" ]; then
    echo "error: Go not installed, not installing Go packages."
    exit 1
fi

go_packages=$(grep -v "^#" go-packages.txt)
for m in ${go_packages} ; do
    GOPATH="${HOME}"/opt/local/src/go "${go}" get -u "${m}"
done
